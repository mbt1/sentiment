	// "image": "mcr.microsoft.com/devcontainers/python",
	"dockerFile": "Dockerfile",
	"remoteEnv": {
		"MASTODON_BASE_URL": "${localEnv:MASTODON_BASE_URL}",
		"MASTODON_SENTIMENT_MASTODON_API_KEY": "${localEnv:MASTODON_SENTIMENT_MASTODON_API_KEY}"
